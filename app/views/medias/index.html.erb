<h1>Listing medias</h1>

<table>
  <thead>
    <tr>
      <th>Nombre archivo</th>
      <th>Servicio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @medias.each do |media| %>
      <tr>
        <td><%= media.nombre_archivo %></td>
        <td><%= media.servicio_id %></td>
        <td><%= link_to 'Show', media %></td>
        <td><%= link_to 'Edit', edit_media_path(media) %></td>
        <td><%= link_to 'Destroy', media, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

